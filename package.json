{
  "name": "boilerplate_fastify",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "author": "Ã‰verton Toffanetto",
  "description": "This application is a boilerplate for complex and large systems, especially those that need to scale with security and code quality.",
  "repository": "https://github.com/everton-dgn/boilerplate_fastify",
  "scripts": {
    "dev": "tsx watch src/main",
    "start": "node dist",
    "build": "rm -rf dist && tsc -p tsconfig-build.json",
    "lint": "eslint --cache src --ext ts,json --max-warnings=0",
    "lint:fix": "eslint --cache --fix src --ext ts,json",
    "format": "prettier --cache --write .",
    "check:format": "prettier --cache --check .",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "test": "jest --maxWorkers=50% --no-cache --detectOpenHandles",
    "test:c": "jest --maxWorkers=50% --coverage --no-cache --detectOpenHandles",
    "test:w": "jest --watch --maxWorkers=25% --no-cache --detectOpenHandles",
    "test:unit": "jest --maxWorkers=50% --testPathPattern=src/tests/unit --no-cache --detectOpenHandles",
    "test:integration": "jest --maxWorkers=50% --testPathPattern=src/tests/integration --no-cache --detectOpenHandles",
    "test:ci": "jest --runInBand --no-cache --detectOpenHandles",
    "check:update": "yarn upgrade-interactive --latest",
    "prepare": "node scripts/create-husky-files.mjs && husky install"
  },
  "type": "module",
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true",
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "fastify": "^4.23.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@faker-js/faker": "^8.1.0",
    "@swc/core": "^1.3.88",
    "@swc/jest": "^0.2.29",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.4",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "dotenv": "^16.3.1",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.4.0",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-sonarjs": "^0.21.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-typescript-sort-keys": "^3.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "tsx": "^3.12.10",
    "typescript": "^5.2.2"
  }
}
